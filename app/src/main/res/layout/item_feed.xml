<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlt_item_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <View
        android:background="@color/color_black"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/ln_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_speaker"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_loa"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="story"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:maxLines="2"
                android:text="story"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/icon_favorite"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_favorites"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ln_content"
        android:layout_marginTop="5dp"
        android:background="@color/color_white"
        />

</RelativeLayout>