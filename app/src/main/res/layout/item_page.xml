<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlt_page_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_cover_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pan"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/color_black"/>

    <TextView
        android:id="@+id/tv_name_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small_x"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_categoty_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_page"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small_x"
        android:text="category  page"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/imv_like"
        android:layout_width="@dimen/icon_20"
        android:layout_height="@dimen/icon_20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:src="@drawable/icon_favorites"/>

    <TextView
        android:id="@+id/tv_fan_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@+id/imv_like"
        android:text="2344"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15"/>

</RelativeLayout>